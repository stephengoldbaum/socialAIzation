{
  "name": "metaverse-social-backend",
  "version": "1.0.0",
  "description": "Backend API for Metaverse Social Practice application",
  "main": "dist/index.js",
  "private": true,
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "clean": "rimraf deploy dist node_modules/.cache",
    "package": "npm run build && rimraf deploy && mkdir -p deploy && npm prune --production && node scripts/create-package.js"
  },
  "dependencies": {
    "@azure/identity": "4.8.0",
    "@azure/keyvault-secrets": "4.9.0",
    "@hookform/resolvers": "^5.0.1",
    "archiver": "7.0.1",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-async-handler": "^1.2.0",
    "inversify": "7.3.0",
    "jsonwebtoken": "^9.0.2",
    "jwt-decode": "^4.0.0",
    "mongodb": "6.15.0",
    "mongoose": "^8.13.2",
    "node-vault": "0.10.2",
    "react-hook-form": "^7.55.0",
    "reflect-metadata": "^0.2.2",
    "rimraf": "^6.0.1",
    "uuid": "11.1.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/bcryptjs": "^3.0.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^20.10.5",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^9.0.8",
    "copyfiles": "^2.4.1",
    "jest": "^29.7.0",
    "mongodb-memory-server": "10.1.4",
    "supertest": "7.1.0",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.2"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/*.test.ts"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.json"
      }
    }
  }
}
