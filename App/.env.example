# Environment
NODE_ENV=development
APP_ENV=development

# Backend Settings
PORT=3001
CORS_ORIGIN=http://localhost:3000

# MongoDB Compatible Database (works with MongoDB, CosmosDB MongoDB API, DocumentDB, etc.)
MONGODB_CONNECTION_STRING=mongodb://localhost:27017
MONGODB_DATABASE_NAME=metaverse-social
MONGODB_USER_COLLECTION=users
MONGODB_SCENARIO_COLLECTION=scenarios
MONGODB_SESSION_COLLECTION=sessions
MONGODB_INTERACTION_COLLECTION=interactions

# Authentication
JWT_SECRET=your-jwt-secret-here
JWT_EXPIRY=1d

# Azure AD (if using)
AZURE_AD_CLIENT_ID=your-client-id
AZURE_AD_TENANT_ID=your-tenant-id
AZURE_AD_CLIENT_SECRET=your-client-secret
AZURE_AD_REDIRECT_URI=http://localhost:3000/api/auth/callback/azure-ad

# Secrets Management
# Options: env, vault, azure
SECRETS_PROVIDER=env

# HashiCorp Vault (if using vault provider)
VAULT_ADDR=http://localhost:8200
VAULT_TOKEN=your-vault-token
VAULT_SECRETS_PATH=secret/metaverse-social

# Azure Key Vault (if using azure provider)
KEY_VAULT_NAME=your-key-vault-name
KEY_VAULT_CLIENT_ID=your-service-principal-id
KEY_VAULT_CLIENT_SECRET=your-service-principal-secret
KEY_VAULT_TENANT_ID=your-tenant-id

# Frontend Settings
NEXT_PUBLIC_API_URL=http://localhost:3000
