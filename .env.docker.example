# Docker Deployment Configuration
# Copy this file to .env.docker and fill in the values

# Ports
BACKEND_PORT=3001
FRONTEND_PORT=5173
MONGO_PORT=27017

# Node Environment
NODE_ENV=production

# MongoDB Configuration
MONGODB_URI=mongodb://mongodb:27017/metaverse-social

# JWT Authentication
JWT_SECRET=your_production_jwt_secret_here
JWT_REFRESH_SECRET=your_production_refresh_token_secret_here
JWT_EXPIRY=1h
JWT_REFRESH_EXPIRY=7d

# CORS Configuration
CORS_ORIGIN=https://your-production-domain.com

# Frontend Configuration
VITE_API_URL=https://api.your-production-domain.com

# Logging
LOG_LEVEL=info
